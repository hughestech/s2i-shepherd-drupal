{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "drupal8-mysql",
    "creationTimestamp": null,
    "annotations": {
      "description": "MySQL as database.",
      "iconClass": "icon-php",
      "tags": "instant-app,mysql"
    }
  },
  "objects": [
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${DRUPAL_SERVICE_NAME}-db",
        "creationTimestamp": null
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "resources": {}
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "${DRUPAL_SERVICE_NAME}-db"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "name": "${DRUPAL_SERVICE_NAME}-db"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "mysql",
                "image": "jubicoy/mysql55-jessie",
                "ports": [
                  {
                    "containerPort": 3306,
                    "name": "${DRUPAL_SERVICE_NAME}-db"
                  }
                ],
                "env": [
                  {
                    "name": "MYSQL_USER",
                    "value": "${MYSQL_USER}"
                  },
                  {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "value": "${MYSQL_ROOT_PASSWORD}"
                  },
                  {
                    "name": "MYSQL_PASSWORD",
                    "value": "${MYSQL_PASSWORD}"
                  },
                  {
                    "name": "MYSQL_DATABASE",
                    "value": "${MYSQL_DATABASE}"
                  }
                ],
                "resources": {},
                "volumeMounts": [
                  {
                    "name": "${DRUPAL_SERVICE_NAME}-data",
                    "mountPath": "/volume"
                  }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "Always",
                "capabilities": {},
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "volumes": [
              {
                "name": "${DRUPAL_SERVICE_NAME}-data",
                "persistentVolumeClaim": {
                  "claimName": "${DRUPAL_SERVICE_NAME}"
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst"
          }
        }
      }
    },
    {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "${DRUPAL_SERVICE_NAME}"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "${VOLUME_CAPACITY}"
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "DRUPAL_SERVICE_NAME",
      "description": "Drupal service name.",
      "value": "drupal8-lightning"
    },
    {
      "name": "DBHOST",
      "description": "Drupal hostname.",
      "value": "IPAddress",
      "required": true
    },
    {
      "name": "VOLUME_CAPACITY",
      "description": "Volume space available for data, e.g. 512Mi, 2Gi",
      "value": "10Gi",
      "required": true
    },
    {
      "name": "HASH_SALT",
      "description": "Hash salt for settings file.",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{74}",
      "required": true
    },
    {
      "name": "MYSQL_ROOT_PASSWORD",
      "description": "MySQL root password.",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}",
      "required": true
    },
    {
      "name": "MYSQL_USER",
      "description": "MySQL database username.",
      "generate": "expression",
      "from": "user[A-Z0-9]{3}",
      "required": true
    },
    {
      "name": "MYSQL_PASSWORD",
      "description": "MySQL database user's password..",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}",
      "required": true
    },
    {
      "name": "MYSQL_DATABASE",
      "description": "MySQL database name.",
      "required": true,
      "value": "drupal"
    },
    {
      "name": "VOLUME_CAPACITY",
      "description": "Volume space available for data, e.g. 512Mi, 2Gi",
      "value": "10Gi",
      "required": true
    },
    {
     "name": "DRUPAL_MODULES",
     "description": "Comma separated Drupal modules to install.",
     "required": false,
     "value": "ctools;pathauto;token;imce;honeypot;yamlform;mailsystem;smtp;paragraphs;entity;entity_reference_revisions;xmlsitemap;google_analytics;metatag;background_image_formatter;advagg;menu_block;redirect;rules;google_tag;fontyourface;hotjar;colorbox;bootstrap;adminimal_theme"
    },
    {
     "name": "DRUPAL_THEMES",
     "description": "Comma separated Drupal themes to install.",
     "required": false,
     "value": "bootstrap;adminimal_theme"
    }
  ],
  "labels": {
    "template": "drupal8-mysql"
  }
}