{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "drupal8-opensocial",
    "creationTimestamp": null,
    "annotations": {
      "description": "OpenSocial with persistent storage and database env var.",
      "iconClass": "icon-php",
      "tags": "instant-app,drupal8"
    }
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${DRUPAL_SERVICE_NAME}-web",
        "creationTimestamp": null
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080,
            "nodePort": 0
          }
        ],
        "selector": {
          "name": "${DRUPAL_SERVICE_NAME}-web"
        },
        "portalIP": "",
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "drupal",
        "creationTimestamp": null
      },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "${DRUPAL_SERVICE_NAME}-web"
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${DRUPAL_SERVICE_NAME}-web",
        "creationTimestamp": null
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "post": {
              "failurePolicy": "Abort",
                "execNewPod": {
                  "containerName": "drupal-web",
                  "command": [
                    "/var/www/entrypoint.sh"
                ]
              }
            }
          },
          "resources": {}
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "${DRUPAL_SERVICE_NAME}-web"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "name": "${DRUPAL_SERVICE_NAME}-web"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "drupal-web",
                "image": "hughestech/opensocial:v1.2",
                "ports": [
                  {
                    "containerPort": 8080,
                    "name": "${DRUPAL_SERVICE_NAME}-web"
                  }
                ],
                "env": [
                  {
        "name": "DRUPAL_MODULES",
        "value": "${DRUPAL_MODULES}"
      },
      {
                    "name": "DRUPAL_THEMES",
                    "value": "${DRUPAL_THEMES}"
                  }
                ],
                "resources": {},
                "volumeMounts": [
                  {
                    "name": "${DRUPAL_SERVICE_NAME}-data",
                    "mountPath": "/volume"
                  },
                  {
                    "name": "${DRUPAL_SERVICE_NAME}-cache",
                    "mountPath": "/tmp/nginx-cache"
                  }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "Always",
                "capabilities": {},
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "volumes": [
              {
                "name": "${DRUPAL_SERVICE_NAME}-data",
                "persistentVolumeClaim": {
                  "claimName": "${DRUPAL_SERVICE_NAME}"
                }
              },
              {
                "name": "${DRUPAL_SERVICE_NAME}-cache",
                "emptyDir": {
                  "medium": ""
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst"
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "DRUPAL_SERVICE_NAME",
      "description": "Drupal service name.",
      "value": "drupal8"
    },
    {
      "name": "VOLUME_CAPACITY",
      "description": "Volume space available for data, e.g. 512Mi, 2Gi",
      "value": "10Gi",
      "required": true
    },
    {
     "name": "DRUPAL_MODULES",
     "description": "Comma separated Drupal modules to install.",
     "required": false,
     "value": "ctools;pathauto;token;imce;honeypot;yamlform;mailsystem;smtp;paragraphs;entity;entity_reference_revisions;xmlsitemap;google_analytics;metatag;background_image_formatter;advagg;menu_block;redirect;rules;google_tag;fontyourface;hotjar;colorbox;bootstrap;adminimal_theme"
    },
    {
     "name": "DRUPAL_THEMES",
     "description": "Comma separated Drupal themes to install.",
     "required": false,
     "value": "bootstrap;adminimal_theme"
    }
  ],
  "labels": {
    "template": "drupal8-mysql"
  }
}