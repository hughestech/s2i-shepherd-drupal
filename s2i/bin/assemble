#!/bin/bash -e
#
# S2I assemble script for the 'shepherd-drupal' image.
# The 'assemble' script builds your application source so that it is ready to run.
#
# For more information refer to the documentation:
#  https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#


# If the 'shepherd-drupal' assemble script is executed with the '-h' flag, print the usage.
if [[ "$1" == "-h" ]]; then
  exec /usr/libexec/s2i/usage
fi

# Restore artifacts from the previous build (if they exist).
# Note that you may need to move things around depending on where your build system
# expects them to be, and where they were grabbed from by save-artifacts.
if [ "$(ls -A /tmp/artifacts/ 2>/dev/null)" ]; then
  echo "---> Restoring build artifacts..."
  mv /tmp/artifacts/.composer ${HOME}/
fi

echo "---> Installing application source..."
cp -Rf /tmp/src/. ./

if [ -f composer.json ]; then
#  if [ -f ssh-privatekey ]; then
#    echo "---> Importing credentials from passed keys..."
#    eval $(ssh-agent)
#    ssh-add ssh-privatekey
#  fi

#  echo "---> Setting ssh parameters..."
#  mkdir -p ~/.ssh
#  echo -e "Host *\n\tStrictHostKeyChecking no\n\tUserKnownHostsFile=/dev/null\n" > ~/.ssh/config

  echo "---> Installing composer dependencies..."
  composer install --no-dev --prefer-dist --no-interaction --no-ansi --optimize-autoloader

  if [ -d /var/www/html/sites/default ]; then
      echo "---> Ensuring /var/www/html/sites/default directory is group writable..."
      chmod g+rw /var/www/html/sites/default
  fi

  echo "CD to drupal directory..."
  echo
  cd /var/www/html
  echo "Checking path..."
  pwd
  echo "Running drush install..."
  drush -y -v site-install --db-url=mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${DBHOST}/${MYSQL_DATABASE}
  echo "OpenSocial site is successfully installed."
  drush cr
  echo "Copying settings file to drupal"
  #chmod 775 /var/www/html/sites/default
  chmod 664 /var/www/html/sites/default/settings.php
  cp /var/www/settings.php /var/www/html/sites/default
  mv /var/www/html/sites/default/files/config_* /var/www/html/sites/default/files/config_dir
  echo "---> Cleaning up..."
  # Remove all .git directories to save space.
  find . -name .git -type d -exec rm -rf {} +
fi


#mv /var/www/files /var/www/html/sites/default/
#mv /var/www/bootstrap /var/www/html/sites/default/files/
#mv /var/www/css /var/www/html/sites/default/files/
#mv /var/www/js /var/www/html/sites/default/files/

