#!/bin/bash -e
#
# S2I assemble script for the 'shepherd-drupal' image.
# The 'assemble' script builds your application source so that it is ready to run.
#
# For more information refer to the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

# If the 'shepherd-drupal' assemble script is executed with the '-h' flag, print the usage.
if [[ "$1" == "-h" ]]; then
	exec /usr/libexec/s2i/usage
fi

# Restore artifacts from the previous build (if they exist).
#
#if [ "$(ls /tmp/artifacts/ 2>/dev/null)" ]; then
#  echo "---> Restoring build artifacts..."
#  mv /tmp/artifacts/. ./
#fi

echo "---> Installing application source..."
cp -Rf /tmp/src/. ./

if [ -f composer.json ]; then
	if [ "$git_host" ]; then
		echo "---> Adding keys for known hosts from git_host env var..."
		mkdir -p ~/.ssh
		ssh-keyscan -H $git_host >> ~/.ssh/known_hosts 2>/dev/null
	fi

	if [ "$git_key" ]; then
		echo "---> Importing credentials from git_key env var..."
		mkdir -p ~/.ssh
		eval $(ssh-agent)
		echo "$git_key" > ~/.ssh/id_rsa && chmod 600 ~/.ssh/id_rsa
		ssh-add ~/.ssh/id_rsa
	fi

	echo "---> Installing composer dependencies..."
	composer create-project hughestech/social_template:dev-master opensocial --no-interaction
	#cp opensocial/html/sites/default/default.settings.php opensocial/html/sites/default/settings.php
	#mkdir -m 755 opensocial/html/sites/default/files
	# Remove all .git directories to save space.
	find . -name .git -type d -exec rm -rf {} +
fi

cp opensocial/html/sites/default/default.settings.php opensocial/html/sites/default/settings.php
mkdir -m 755 opensocial/html/sites/default/files
